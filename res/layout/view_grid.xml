<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="248dp">
<LinearLayout
    android:layout_width="175dp"
    android:layout_height="248dp"
    android:background="@drawable/plate_betting"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/betting_image"
        android:layout_width="148dp"
        android:layout_height="74dp"
        android:paddingTop="14dp"
        android:src="@drawable/product_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/better_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/user1" />

        <TextView
            android:id="@+id/better_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="이지아"
            android:textColor="#037eba"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/star_image"
                android:layout_width="42dp"
                android:layout_height="7dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/star_4" />

            <TextView
                android:id="@+id/betting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="2달 안에 5KG 감량!"
                android:textColor="#747474"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<ImageView
    android:id="@+id/black"
    android:layout_width="175dp"
    android:layout_height="248dp"
    android:src="@drawable/plate_betting_black"
    android:visibility="invisible"/>
</FrameLayout>
