<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/bettingresult_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="배팅팝(로고)"
            android:textColor="#C6FFF6"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/bettingresult_closebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_launcher" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bettingresult_userimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bettingresult_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름" >
            </TextView>

            <TextView
                android:id="@+id/bettingresult_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배팅명칭" >
            </TextView>

            <TextView
                android:id="@+id/bettingresult_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배팅기한" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000" >

            <ImageView
                android:id="@+id/bettingresult_bettingicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/bettingresult_bettingproductimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />
        </FrameLayout>

        <TextView
            android:id="@+id/bettingresult_bettingproductname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배팅 상품명" >
        </TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000" >

        <ImageButton
            android:id="@+id/bettingresult_betting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/bettingresult_bettingfail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실패 배팅 인원">
        </TextView>
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bettingresult_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/ic_launcher"/>

        <Button
            android:id="@+id/bettingresult_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:background="@drawable/ic_launcher" />
    </LinearLayout>

</LinearLayout>