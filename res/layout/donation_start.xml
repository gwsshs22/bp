<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/donationstart_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/top_center" >

        <ImageView
            android:id="@+id/donationstart_closebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/top_right_close" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/donationstart_userimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/betting_start_detail_page_user_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/donationstart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="#037eba"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/donationstart_starnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:src="@drawable/betting_start_star_4" />

            <TextView
                android:id="@+id/donationstart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="배팅명칭"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/donationstart_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="7dp"
                android:text="배팅기한"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/donationstart_donationicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/donation_start_box" />

            <ImageView
                android:id="@+id/donationstart_donationproductimage"
                android:layout_width="276dp"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/donationstart_donationproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="19dp"
                android:text="배팅 상품명"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/donationstart_donationproductprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="6dp"
                android:text="9900 원"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/donationstart_donationbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/betting_button" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" >

            <ImageView
                android:id="@+id/donationstart_bettingfail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="29dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/betting_start_num_fail" />

            <TextView
                android:id="@+id/donationstart_bettingfailnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left" >

            <ImageView
                android:id="@+id/donationstart_bettingsuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/betting_start_num_success" />

            <TextView
                android:id="@+id/donationstart_bettingsuccessnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="29dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/donationstart_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/betting_start_share" />
    </LinearLayout>

</LinearLayout>