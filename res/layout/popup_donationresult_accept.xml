<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popup_donationresult_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popup_donationresult_success" />

        <ImageView
            android:id="@+id/popup_donationresult_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popup_donationresult_fail" />
    </LinearLayout>

    <ImageView
        android:id="@+id/popup_donationresult_closebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/popup_closebutton" />

</FrameLayout>