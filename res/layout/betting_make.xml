<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/bettingmake_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/top_center" >

        <ImageView
            android:id="@+id/bettingmake_closebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/top_right_close" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/bettingmake_bettingicon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:button="@drawable/betting_make_bettingbutton"
                android:checked="true" />

            <RadioButton
                android:id="@+id/bettingmake_donationicon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="68dp"
                android:button="@drawable/betting_make_donationbutton" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/new_plate_1" >

        <EditText
            android:id="@+id/bettingmake_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="2dp"
            android:hint="주제"
            android:inputType="text"
            android:maxLength="70"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" >

        </EditText>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/new_plate_2" >

        <EditText
            android:id="@+id/bettingmake_term"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="2dp"
            android:inputType="text"
            android:maxLength="70"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" >

        </EditText>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/new_plate_3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="65dp"
            android:inputType="text"
            android:maxLength="70"
            android:text="베팅 상품"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/bettingmake_findgift"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:button="@drawable/betting_make_buy_product"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/bettingmake_inputgift"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="2dp"
                    android:button="@drawable/betting_make_write" />
            </RadioGroup>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/new_plate_4"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/bettingmake_writeproduct"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="2dp"
            android:hint="베팅 상품 직접 입력하기"
            android:inputType="text"
            android:maxLength="70"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" >

        </EditText>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/new_plate_5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="65dp"
            android:inputType="text"
            android:maxLength="70"
            android:text="베팅 인원"
            android:textColor="#c7c7c7"
            android:textColorHint="#c7c7c7"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="11dp"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/bettingmake_people2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/betting_make_pople_num_2"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/bettingmake_people4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:button="@drawable/betting_make_pople_num_4" />

                <RadioButton
                    android:id="@+id/bettingmake_people6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:button="@drawable/betting_make_pople_num_6" />

                <RadioButton
                    android:id="@+id/bettingmake_people8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:button="@drawable/betting_make_pople_num_8" />
            </RadioGroup>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bettingmake_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/upload_button" />
    </LinearLayout>

</LinearLayout>