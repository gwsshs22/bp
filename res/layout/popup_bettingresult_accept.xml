<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_result_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popup_bettingresult_success"
            android:layout_width="133dp"
            android:layout_height="240dp"
            android:src="@drawable/edittext_background" />

        <ImageView
            android:id="@+id/popup_bettingresult_failure"
            android:layout_width="133dp"
            android:layout_height="240dp"
            android:src="@drawable/edittext_background" />

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_bettingresult_closebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="135dp"
        android:src="@drawable/popup_closebutton" />

</FrameLayout>